{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "outDir": "./build",
    "baseUrl": "./", // Base directory to resolve non-relative module names
    "paths": {
      "@/*": ["src/*"] // Map @/ to the src/ directory
    }
  },
  "exclude": ["build"]
}
